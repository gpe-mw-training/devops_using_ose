{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "web-app-template"
    },
    "labels": {
        "template": "web-app-template"
    },
    "objects": [
        {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
                "annotations": {
                    "description": "The web server's http port."
                },
                "labels": {
                    "application": "webapp-${RUNTIME_ENVIRONMENT}",
                    "template": "eap6-basic-sti"
                },
                "name": "webapp-${RUNTIME_ENVIRONMENT}"
            },
            "spec": {
                "ports": [
                    {
                        "port": 8080,
                        "targetPort": 8080
                    }
                ],
                "selector": {
                    "deploymentConfig": "webapp-${RUNTIME_ENVIRONMENT}"
                }
            }
        },
        {
            "apiVersion": "v1",
            "id": "webapp-${RUNTIME_ENVIRONMENT}-http-route",
            "kind": "Route",
            "metadata": {
                "annotations": {
                    "description": "Route for application's http service."
                },
                "labels": {
                    "application": "webapp-${RUNTIME_ENVIRONMENT}",
                    "template": "eap6-basic-sti"
                },
                "name": "webapp-${RUNTIME_ENVIRONMENT}-http-route"
            },
            "spec": {
                "host": "",
                "to": {
                    "name": "webapp-${RUNTIME_ENVIRONMENT}"
                }
            }
        },
        {
            "apiVersion": "v1",
            "kind": "ImageStream",
            "metadata": {
                "labels": {
                    "application": "webapp-${RUNTIME_ENVIRONMENT}",
                    "template": "eap6-basic-sti"
                },
                "name": "webapp-${RUNTIME_ENVIRONMENT}"
            }
        },
        {
            "apiVersion": "v1",
            "kind": "BuildConfig",
            "metadata": {
                "labels": {
                    "application": "webapp-${RUNTIME_ENVIRONMENT}",
                    "template": "eap6-basic-sti"
                },
                "name": "webapp-${RUNTIME_ENVIRONMENT}"
            },
            "spec": {
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "webapp-${RUNTIME_ENVIRONMENT}:latest"
                    }
                },
                "source": {
                    "contextDir": "",
                    "git": {
                        "ref": "master",
                        "uri": "https://github.com/gpe-mw-training/session-replication"
                    },
                    "type": "Git"
                },
                "strategy": {
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "jboss-eap64-openshift:latest",
                            "namespace": "openshift"
                        },
			"env": [
                            {
                                "name": "DISABLE_ASSET_COMPILATION",
                                "value": "true"
                            }, {
                                "name": "APPLICATION_ARTIFACT_URL",
                                "value": "http://${JENKINS_ROUTE}/job/session-replication/lastSuccessfulBuild/artifact/target/session-replication.war"
                            }, {
                                "name": "DOWNLOAD_USER_CREDENTIALS",
                                "value": "admin:admin123"
                            }
    			]
                    },
                    "type": "Source"
                },
                "triggers": [
                    {
                        "github": {
                            "secret": "RiaxUMKv"
                        },
                        "type": "GitHub"
                    },
                    {
                        "generic": {
                            "secret": "rBRvI8v6"
                        },
                        "type": "Generic"
                    },
                    {
                        "imageChange": {},
                        "type": "ImageChange"
                    }
                ]
            }
        },
        {
            "apiVersion": "v1",
            "kind": "DeploymentConfig",
            "metadata": {
                "labels": {
                    "application": "webapp-${RUNTIME_ENVIRONMENT}",
                    "template": "eap6-basic-sti"
                },
                "name": "webapp-${RUNTIME_ENVIRONMENT}"
            },
            "spec": {
                "replicas": 1,
                "selector": {
                    "deploymentConfig": "webapp-${RUNTIME_ENVIRONMENT}"
                },
                "strategy": {
                    "type": "Recreate"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "application": "webapp-${RUNTIME_ENVIRONMENT}",
                            "deploymentConfig": "webapp-${RUNTIME_ENVIRONMENT}"
                        },
                        "name": "webapp-${RUNTIME_ENVIRONMENT}"
                    },
                    "spec": {
                        "containers": [
                            {
                                "env": [
                                    {
                                        "name": "HORNETQ_CLUSTER_PASSWORD",
                                        "value": "SuMnXIWS"
                                    },
                                    {
                                        "name": "HORNETQ_QUEUES",
                                        "value": ""
                                    },
                                    {
                                        "name": "HORNETQ_TOPICS",
                                        "value": ""
                                    }
                                ],
                                "image": "webapp-${RUNTIME_ENVIRONMENT}",
                                "imagePullPolicy": "Always",
                                "name": "webapp-${RUNTIME_ENVIRONMENT}",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "name": "http",
                                        "protocol": "TCP"
                                    }
                                ],
                                "readinessProbe": {
                                    "exec": {
                                        "command": [
                                            "/bin/bash",
                                            "-c",
                                            "/opt/eap/bin/readinessProbe.sh"
                                        ]
                                    }
                                }
                            }
                        ]
                    }
                },
                "triggers": [
                    {
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "webapp-${RUNTIME_ENVIRONMENT}"
                            ],
                            "from": {
                                "kind": "ImageStream",
                                "name": "webapp-${RUNTIME_ENVIRONMENT}"
                            }
                        },
                        "type": "ImageChange"
                    }
                ]
            }
        }
    ],
    "parameters": [
        {   
            "name": "RUNTIME_ENVIRONMENT",
            "description": "specify: dev, qa or prod",
            "required": true
        },      
        {
            "name": "JENKINS_ROUTE",
            "description": "Indicates to JEE S2I where to locate the last successfully built web archive",
            "required": true
        }
    ]
}
